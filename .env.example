# Network Monitoring Stack Configuration
# Copy this file to .env and configure your settings

# =============================================================================
# GRAFANA CONFIGURATION
# =============================================================================

# Grafana Admin Credentials
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=changeme123

# Grafana Root URL (for external access via reverse proxy)
# For production, change to your domain (e.g., http://smokeping.fiber.bg)
GRAFANA_ROOT_URL=http://localhost

# Server Domain (for Nginx and public access)
# For production, change to your domain (e.g., smokeping.fiber.bg)
SERVER_DOMAIN=localhost

